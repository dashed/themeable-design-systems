{
  "name": "themeable-design-systems",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^7.1.2",
    "prettier": "^1.12.1",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-scripts": "1.1.4"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "scripts": {
    "pretty": "prettier --single-quote --write 'src/**/*.{js,jsx,json,css,md}' '**/*.{js,jsx,css,md}'",
    "precommit": "lint-staged",
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test --env=jsdom",
    "eject": "react-app-rewired eject",
    "flow": "flow",
    "noflow": "cd src/;flow-annotation-check --list-files=noflow"
  },
  "devDependencies": {
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-react-docgen": "^1.9.0",
    "flow-annotation-check": "^1.8.1",
    "flow-bin": "^0.73.0",
    "react-app-rewired": "^1.5.2"
  },
  "jest": {
    "moduleDirectories": ["node_modules", "<rootDir>/src"],
    "moduleNameMapper": {
      "^~/(.*)": "<rootDir>/src/$1"
    }
  },
  "peerDependencies": {
    "jest": "20.x"
  }
}
